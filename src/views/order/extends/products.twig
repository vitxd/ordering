{% block products %}
    {% if 0 == products|length %}
        <div class="alert alert-info">There are no products yet.</div>
    {% else %}
        <table class="table table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Cost</th>
                <th class="text-right">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.getId() }}</td>
                    <td>{{ product.getName() }}</td>
                    <td>{{ product.getCost() }}</td>
                    <td class="text-right">
                        <button data-add-to-cart="{{ product.getId() }}" class="btn btn-success"><span class="glyphicon glyphicon-shopping-cart"></span> Add to cart</button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}